<h1>Modification d'un produit {{prod.name}}</h1>
<div>
    <form action="/prod/edit" method="POST">
        <input type="text" name="name" value="{{prod.name}}">
        <input type="number" name="cost" value="{{prod.cost}}">
        <input type="number" name="rest" value="{{prod.rest}}">
        <input type="hidden" name="_id" value="{{prod._id}}">
        <input type="submit">
    </form>
{{ text }}</div>